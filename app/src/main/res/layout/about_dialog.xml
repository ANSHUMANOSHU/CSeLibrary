<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5EAEF5ED"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Design And Developed By -"
        android:textAlignment="center"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="35"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Anshuman Pandey " />

        <TextView
            android:id="@+id/weblink1"
            android:layout_width="0dp"
            android:layout_weight="65"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="https://www.linkedin.com/in/anshuman-pandey-838a73182"
            android:textColor="#651FFF"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="35"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hardik Goel " />

        <TextView
            android:id="@+id/weblink2"
            android:layout_width="0dp"
            android:layout_weight="65"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="https://www.linkedin.com/in/shark-king-b0aa6a174"
            android:textColor="#651FFF"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDF Source : https://www.goalkicker.com"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Close" />

</LinearLayout>